@model IEnumerable<VRMS.Models.VehicleViewModel>

@{
    ViewData["Title"] = "Vehicle Page";
}

<div class="row">
    <div class="col-md-11">
        <h1>Vehicle Details</h1>
    </div>
    <div class="col-md-1">
        <a class="btn btn-primary" asp-area="" asp-controller="Vehicle" asp-action="Create">Create</a>
    </div>
</div>
<div class="row">
    <div class="table-responsive">
        <table class="table table-hover table-bordered table-striped">
            <thead class="thead-light">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Name</th>
                    <th scope="col">Description</th>
                    <th scope="col">Model</th>
                    <th scope="col">Color</th>
                    <th scope="col" width="15%">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count() > 0)
                {
                    int counter = 0;
                    foreach (var item in Model)
                    {
                        counter++;
                        <tr>
                            <th scope="col">@counter</th>
                            <td>@item.Name</td>
                            <td>@item.Description</td>
                            <td>@item.Model</td>
                            <td>@item.Color</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Id"><i class="fas fa-edit text-success"></i></a> |
                                <a asp-action="Details" asp-route-id="@item.Id"><i class="fas fa-info text-info"></i></a> |
                                <a asp-action="Delete" asp-route-id="@item.Id"><i class="fas fa-trash-alt text-danger"></i></a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <th scope="col" colspan="5">No Records Found</th>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<div class="row">
    @if (Model.Count() > 0)
    {
        foreach (var item in Model)
        {
            <div class="col-md-3 vehicles">
                <div class="card text-center">
                    <div class="card-header">
                        @item.Model
                        <div class="float-end">
                            <a asp-action="Edit" asp-route-id="@item.Id"><i class="fas fa-edit text-success"></i></a> |
                            <a asp-action="Details" asp-route-id="@item.Id"><i class="fas fa-info text-info"></i></a> |
                            <a asp-action="Delete" asp-route-id="@item.Id"><i class="fas fa-trash-alt text-danger"></i></a>
                        </div>
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">@item.Name</h5>
                        <p class="card-text">@item.Description</p>

                    </div>
                    <div class="card-footer text-muted">
                        10
                    </div>
                </div>
            </div>
        }
    }

</div>
